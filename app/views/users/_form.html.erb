<div id="registration-form">
<%= simple_form_for(@user, :remote => :true) do |f| %>
<form class="form-inline">
  <div class="col-md-6 col-md-offset-3">
  <div class="form-group">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
  <center><%= f.input :firstname, label: "First Name", placeholder: "Michael (Justice)", required: "true" %></center>
  </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
  <center><%= f.input :lastname, label: "Last Name", placeholder: "Kirby", required: "true" %></center>
    </div>
      </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
  <center><%= f.input :email, label: "Email", placeholder: "kirbyj@dissent.com", required: "true" %></center>
    </div>
      </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
  <center><%= f.input :shirtsize, as: :radio_buttons, collection: ['Small', 'Medium', "Large"], required: "true" %></center>
    </div>
      </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
  <center><%= f.input :designation, as: :radio_buttons, collection: ['Legal Eagle', 'Tech King', 'Hustler'], required: "true" %></center>
    </div>
      </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
    <center><%= f.input :thoughts, placeholder: "Law students love to talk", required: "true" %></center>
  </div>
    </div>
  <div class="form-actions">
    <center><%= f.button :submit %></center>
  </div>
  </div>
</form>
<% end %>
</div>
